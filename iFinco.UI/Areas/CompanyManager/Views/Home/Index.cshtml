
@{
    ViewBag.Title = "Dash Board";

}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                @Html.Action("TotalSales", "Home")
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                @Html.Action("TotalRevinue", "Home")
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                @Html.Action("TotalDr", "Home")
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                @Html.Action("TotalCr", "Home")
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-chart" data-background-color="green">
                        <div class="ct-chart" id="weeklySalesChart"></div>
                    </div>
                    <div class="card-content">
                        <h4 class="title">Weekly Sales</h4>
                        <p class="category" id="saleStat">
                            <span class="text-success"><i class="fa fa-long-arrow-up"></i> 55% </span> increase in today sales.
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i> 4 minutes ago
                            <i class="material-icons pull-right" style="display:inline-block">refresh</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-chart" data-background-color="red">
                        <div class="ct-chart" id="weeklyPurchaseChart"></div>
                    </div>
                    <div class="card-content">
                        <h4 class="title">Weekly Purchases</h4>
                        <p class="category">
                            <span class="text-success"><i class="fa fa-long-arrow-up"></i> 55% </span> increase in today purchases.
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i> campaign sent 2 days ago
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="col-md-4">
                    <div class="card">
                        <div class="card-header card-chart" data-background-color="orange">
                            <div class="ct-chart" id="emailsSubscriptionChart"></div>
                        </div>
                        <div class="card-content">
                            <h4 class="title">Email Subscriptions</h4>
                            <p class="category">Last Campaign Performance</p>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons">access_time</i> campaign sent 2 days ago
                            </div>
                        </div>
                    </div>
                </div>*@
        </div>

        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="card card-nav-tabs">
                    <div class="card-header" data-background-color="purple">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title">Stock Status:</span>
                                <ul class="nav nav-tabs" data-tabs="tabs">
                                    <li class="active">
                                        <a href="#profile" data-toggle="tab">
                                            <i class="material-icons">bug_report</i> Out Of Stock
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                    <li class="">
                                        <a href="#messages" data-toggle="tab">
                                            <i class="material-icons">code</i> Expired Products
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                    <li class="">
                                        <a href="#settings" data-toggle="tab">
                                            <i class="material-icons">cloud</i> Near To Expire
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="tab-content">
                            <div class="tab-pane active" id="profile">
                                <div class="card-content table-responsive">
                                    @Html.Action("StockStatus", "Home")
                                </div>
                            </div>
                            <div class="tab-pane" id="messages">
                                <div class="card-content table-responsive">
                                    @Html.Action("ExpriedStock", "Home")
                                </div>
                            </div>
                            <div class="tab-pane" id="settings">
                                @Html.Action("NearToExpireStock", "Home")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="orange">
                        <h4 class="title">Employees Stats</h4>
                        <p class="category">New employees on 15th September, 2016</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table table-hover">

                            <thead class="text-warning">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Salary</th>
                                    <th>Country</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Dakota Rice</td>
                                    <td>$36,738</td>
                                    <td>Niger</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Minerva Hooper</td>
                                    <td>$23,789</td>
                                    <td>Curaçao</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Sage Rodriguez</td>
                                    <td>$56,142</td>
                                    <td>Netherlands</td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td>Philip Chaney</td>
                                    <td>$38,735</td>
                                    <td>Korea, South</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" class="active-nav" value="#Dashboard" />
@section Scripts{
    <!--  Charts Plugin -->
    <script src="@Url.Content("~/")PanalAssets/js/chartist.min.js"></script>
    <!-- Material Dashboard javascript methods -->

    <script src="@Url.Content("~/")PanalAssets/js/demo.js"></script>
    <script>
        $(document).ready(function () {
            demo.initDashboardPageCharts();
        })
    </script>
}

