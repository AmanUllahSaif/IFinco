@model iFinco.DAL.Company
@{
    ViewBag.Title = "Register";
}
<!-- Breadcrumb Area Start-->
<div class="breadcrumb-area bg-overlay-dark bg-6">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-left">
                    <h2>Register Company</h2>
                    <div class="breadcrumb-bar">
                        <ul class="breadcrumb">
                            <li><a href="index.html">HOME</a></li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End -->
<!--Start Contact Form Area-->



<div class="contact-form-area fix pb-120 pt-120">
    <div class="container">
        <div class="contact-form-left">
          
            <h4 class="details-title">Register Your Company</h4>
            @using (Html.BeginForm("Register", "Company", FormMethod.Post, new { id = "contact-for", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @*<div>
                    @Html.ValidationSummary()
                </div>*@
                <div>
                    @Html.TextBoxFor(x => x.Title, new { placeholder = "Company Title" })
                    @Html.ValidationMessageFor(x => x.Title)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.NTN_STN, new { placeholder = "NTN/STN" })
                    @Html.ValidationMessageFor(x => x.NTN_STN)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.Contact, new { placeholder = "Contact no" })
                    @Html.ValidationMessageFor(x => x.Contact)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.Email, new { placeholder = "Email Adress" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div>
                    @Html.TextAreaFor(x => x.Adress, new { placeholder = "Adress" })
                    @Html.ValidationMessageFor(x => x.Adress)
                </div>

                <div class="col-10 fix text-right">
                    <input type="file" name="logo" style="display:none" id="flLogo" data-btn=".btn-logo" data-name="#logoName" data-preview=".logo-preview" class="vns-file" />
                    <span id="logoName"></span>
                    <button type="button" class="default-button submit-btn btn-logo">Upload Logo</button>
                    <button type="submit" class="default-button submit-btn">SUBMIT</button>
                </div>
                <p class="form-messege"></p>
            }


        </div>
        <div class="contact-form-right">
            <h4 style="margin-bottom:30px">Logo</h4>
            <img class="logo-preview" src="~/ClientAssets/img/logo/logo.png" style="height:100px;width:100px">
        </div>

        <div class="contact-form-right">
            <div class="sidebar-contact-info">
                <h4>Need Any Help?</h4>
                <p>We are here to help! We're frinedly and available to help you. Reach out to us at anytime and we'll happily answer your questions.</p>
                <a href="@Url.Action("index", "home")#contact" class="default-button" style="background-color:white">Contact</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/common/fileuploader.js"></script>
    <script type="text/javascript">
        $('.vns-file').VNSFileUploder();

    </script>
}
