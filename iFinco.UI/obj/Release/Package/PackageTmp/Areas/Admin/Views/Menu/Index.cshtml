@using PagedList.Mvc;
@using PagedList;
@model iFinco.UI.Models.MenuSearchModel
@using iFinco.DAL.Enum
@{
    ViewBag.Title = "Menu Management";
    bool isSearched = Model != null && (!string.IsNullOrEmpty(Model.Title) || !string.IsNullOrEmpty(Model.AreaName) || !string.IsNullOrEmpty(Model.ControllerName) || !string.IsNullOrEmpty(Model.ActionName));
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <div class="col-md-9">
                            <h4 class="title">Menu</h4>
                            <p class="category">Manage Menu, you can add, edit or delete any Menu.</p>
                        </div>
                        <div class="col-md-3 text-right">
                            @Html.ActionLink("Add", "Create", "Menu", new { @class = "btn btn-info btn-sm" })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    @using (Html.BeginForm("index", "Menu", FormMethod.Get))
                    {
                        <div class="card-content table-responsive">
                            <table class="table">
                                <thead class="text-primary">
                                    <tr>
                                        <th>Title</th>
                                        <th>Area</th>
                                        <th>Controller</th>
                                        <th>Action</th>
                                        <th>Type</th>
                                        <th>
                                            Action
                                            <a href="#">
                                                <i class="material-icons" id="btnSearch">keyboard_arrow_down</i>
                                            </a>
                                        </th>
                                    </tr>
                                    <tr @(isSearched ? "" : "style=display:none") id="trSearch">
                                        <td>@Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Title" })</td>
                                        <td>@Html.TextBoxFor(x => x.AreaName, new { @class = "form-control", placeholder = "Area" })</td>
                                        <td>@Html.TextBoxFor(x => x.ControllerName, new { @class = "form-control", placeholder = "Controller" })</td>
                                        <td>@Html.TextBoxFor(x => x.ActionName, new { @class = "form-control", placeholder = "Action" })</td>
                                        <td></td>
                                        <td>
                                            <button class="btn btn-info btn-sm " type="submit">
                                                <i class="material-icons">search</i>
                                                <div class="ripple-container"></div>
                                            </button>
                                            <a href="@Url.Action("Index","Menu")" cla class="btn btn-info btn-sm">
                                                <i class="material-icons">refresh</i>
                                            </a>
                                        </td>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model.Data == null || Model.Data.Count() < 1)
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">No record found</td>
                                        </tr>
                                    }
                                    @foreach (var item in Model.Data)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Area</td>
                                            <td>@item.Controller</td>
                                            <td>@item.Action</td>
                                            <td>@((MenuType)item.Type)</td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Menu", new { area = "Admin", id = item.Id })" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                <a href="@Url.Action("Delete", "Menu", new { area = "Admin", id = item.Id })" data-toggle="tooltip" title="Delete"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                                @Ajax.ActionLink(" ", "Detail", "Menu", new { area = "Admin", id = item.Id }, new AjaxOptions { HttpMethod = "GET", OnSuccess = "ShowModal" }, new { data_toggle = "tooltip", title = "View Detail", @class = "fa fa-info" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="col-md-12 text-right">
                                @Html.PagedListPager((IPagedList)Model.Data, page => Url.Action("Index", new { page, Title = Request.QueryString["Title"], Area = Request.QueryString["Area"], Controller = Request.QueryString["Controller"], Action = Request.QueryString["Action"] }))
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div id="companyModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Menu Info</h4>
            </div>
            <div class="modal-body" id="content">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnCncl" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" class="active-nav" value="#Menu" />

@section Scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function ShowModal(data) {
            $('#content').html(data);
            $('#companyModal').modal();
        }

        $('#btnSearch').click(function () {
            $('#trSearch').slideToggle('slow');
        })
    </script>
}

