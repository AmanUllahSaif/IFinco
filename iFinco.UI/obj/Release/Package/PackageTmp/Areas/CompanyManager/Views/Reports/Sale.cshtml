@using PagedList.Mvc;
@using PagedList;

@model iFinco.UI.Models.SaleSearchModel

@{
    ViewBag.Title = "Sale Managment";
    bool isSearched = Model != null && ((Model.PartyId != null) || (Model.DateFrom != null) || (Model.DateTo != null));
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <div class="col-md-9">
                            <h4 class="title">Sale</h4>
                            @*<p class="category">Manage Sale, you can add,edit or delete any Sale.</p>*@
                        </div>
                        <div class="col-md-3 text-right">
                            @Ajax.ActionLink(" ", "SalePrint", "Reports", new { area = "CompanyManager", PartyId = Request.QueryString["PartyId"], DateFrom = Request.QueryString["DateFrom"], DateTo = Request.QueryString["DateTo"] }, new AjaxOptions { HttpMethod = "GET", OnSuccess = "ShowPrint" }, new { data_toggle = "tooltip", title = "Print", @class = "fa fa-print" })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="card-content table-responsive">
                        @using (Html.BeginForm("Sale", "Reports", FormMethod.Get))
                        {
                            <table class="table">
                                <thead class="text-primary">
                                    <tr>
                                        <th>Invoice No</th>
                                        <th>Party</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Discount</th>
                                        <th>Description</th>
                                        <th>
                                            <a href="#">
                                                <i class="material-icons" id="btnSearch">keyboard_arrow_down</i>
                                            </a>
                                        </th>
                                    </tr>
                                    <tr @(isSearched ? "" : "style=display:none") id="trSearch">
                                        <td></td>
                                        <td>@Html.DropDownListFor(x => x.PartyId, new SelectList(ViewBag.Party, "Id", "Title"), "Select Party", new { @class = "form-control" })</td>
                                        <td>@Html.TextBoxFor(x => x.DateFrom, "{0:dd/MM/yyyy}", new { @class = "form-control form_datetime", placeholder = "From" })</td>
                                        <td>@Html.TextBoxFor(x => x.DateTo, "{0:dd/MM/yyyy}", new { @class = "form-control form_datetime", placeholder = "To" })</td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            <button class="btn btn-info btn-sm " type="submit">
                                                <i class="material-icons">search</i>
                                                <div class="ripple-container"></div>
                                            </button>
                                            <a href="@Url.Action("Sale","Reports")" class="btn btn-info btn-sm">
                                                <i class="material-icons">refresh</i>
                                            </a>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Data == null || Model.Data.Count() < 1)
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">No record found</td>
                                        </tr>
                                    }
                                    @foreach (var item in Model.Data)
                                    {
                                        <tr>
                                            <td>@item.InvoiceNo</td>
                                            <td>
                                                @if (item.PartyId != null)
                                                {
                                                    @item.Party.Title
                                                }
                                                else
                                                {
                                                    @: Walking Customer
                                                }
                                            </td>
                                            <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                            <td>@item.Total PKR</td>
                                            <td>@item.Discount PKR</td>
                                            <td>@item.Notes</td>
                                            @*<td>
                                                    <a href="@Url.Action("Delete", "Sale", new { area = "CompanyManager", id = item.Id })" data-toggle="tooltip" title="Delete"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                                    <a href="@Url.Action("Create", "SaleReturn", new { area = "CompanyManager", id = item.Id,InvoiceNo=item.InvoiceNo })" data-toggle="tooltip" title="Return"><i class="material-icons">reply</i></a>
                                                    @Ajax.ActionLink(" ", "Print", "Sale", new { area = "CompanyManager", id = item.Id }, new AjaxOptions { HttpMethod = "GET", OnSuccess = "ShowPrint" }, new { data_toggle = "tooltip", title = "Print", @class = "fa fa-print" })
                                                </td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @*<div class="col-md-12 text-right">
                                    @Html.PagedListPager((IPagedList)Model.Data, page => Url.Action("Index", new { page, Title = Request.QueryString["Title"], DateFrom = Request.QueryString["DateFrom"], DateTo = Request.QueryString["DateTo"] }))
                                </div>*@
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="companyModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Sale Info</h4>
            </div>
            <div class="modal-body" id="content">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnCncl" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" class="active-nav" value="#SaleReport" />

@section Scripts{
    <script type="text/javascript">
        function ShowModal(data) {
            $('#content').html(data);
            $('#companyModal').modal();
        }

        function ShowPrint(data) {
            var w = window.open("", "", "width=900,height=700");
            w.document.write(data);
            w.document.close();
            w.focus();
            setTimeout(function () {
                w.print();
                w.close();
            }, 1000)

        }

        $('#btnSearch').click(function () {
            $('#trSearch').slideToggle('slow');
        })
    </script>

    @if (ViewBag.Id != null)
    {
        <script type="text/javascript">
            var id = @ViewBag.Id
            $.ajax({
                type: "GET",
                url: '/CompanyManager/Sale/Print/' + id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: ShowPrint
            });
        </script>
    }
}