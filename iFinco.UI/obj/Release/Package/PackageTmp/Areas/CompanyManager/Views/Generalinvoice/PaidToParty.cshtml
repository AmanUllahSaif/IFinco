@model iFinco.UI.Models.GeneralinvoiceVM
@{
    ViewBag.Title = "Paid To Party";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title">Paid Payment To Party</h4>
                        <p class="category"></p>
                    </div>
                    <div class="card-content">
                        @using (Html.BeginForm("PaidToParty", "Generalinvoice", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.DropDownListFor(x => x.PartyId, new SelectList(ViewBag.party, "Id", "Title"), "Select Party", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.PartyId)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control", placeholder = "amount" })
                                    @Html.ValidationMessageFor(x => x.Amount)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control form_datetime", placeholder = "Date" })
                                    @Html.ValidationMessageFor(x => x.Date)
                                </div>
                            </div>
                            <div class="row  pull-right">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/common/fileuploader.js"></script>
    <script type="text/javascript">
        $('.vns-file').VNSFileUploder();

    </script>
}



