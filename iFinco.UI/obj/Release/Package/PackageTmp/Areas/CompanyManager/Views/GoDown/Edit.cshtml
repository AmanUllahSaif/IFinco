@model iFinco.DAL.GoDown

@{
    ViewBag.Title = "Godown Management";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title">Update Godown</h4>
                        <p class="category"></p>
                    </div>
                    <div class="card-content">
                        @using (Html.BeginForm("Edit", "GoDown", FormMethod.Post, new { id = "contact-for" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(x => x.Title, new { @class = "contor-label" })
                                                @Html.HiddenFor(x => x.Id)
                                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Title)
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(x => x.Description, new { @class = "contor-label" })
                                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Description)
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(x => x.Contact, new { @class = "contor-label" })
                                                @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Contact)
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(x => x.Address, new { @class = "contor-label" })
                                                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Address)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-right">
                                <a href="@Url.Action("Index","Godown")" class="btn btn-default pull-right btn-md">Cancle</a>
                                <button type="submit" class="btn btn-primary pull-right">Update</button>
                            </div>

                            <div class="clearfix"></div>
                        }
                    </div>

                </div>
            </div>


        </div>
    </div>
</div>

<input type="hidden" class="active-nav" value="#Godown" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/common/fileuploader.js"></script>
    <script type="text/javascript">
        $('.vns-file').VNSFileUploder();

    </script>
}






